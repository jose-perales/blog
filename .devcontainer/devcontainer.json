{
  "name": "Career Blog Dev",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
  },
  "postCreateCommand": "npm install && npx prisma generate",
  "postStartCommand": "docker compose up -d",
  "forwardPorts": [3000, 5432, 5555],
  "portsAttributes": {
    "3000": { "label": "Next.js App" },
    "5432": { "label": "Postgres" },
    "5555": { "label": "Prisma Studio" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "Prisma.prisma",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
      }
    }
  },
  "remoteEnv": {
    "DATABASE_URL": "postgresql://blog:blog@localhost:5432/blog?schema=public"
  }
}
